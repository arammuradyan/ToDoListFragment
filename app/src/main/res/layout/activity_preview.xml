<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgView"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/colorRed"
        android:background="@drawable/image_view_background"
        android:scaleType="centerCrop"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_margin="5dp"
        app:layout_constraintTop_toTopOf="@id/view"
        app:layout_constraintLeft_toLeftOf="@+id/view"
        android:transitionName="img_trans"/>
    <Button
        android:id="@+id/pic_chose_btn"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="@string/pick_btn"
        android:layout_marginStart="62dp"
        android:background="@drawable/button_background_presd"
        app:layout_constraintTop_toBottomOf="@+id/rb_type"
        app:layout_constraintLeft_toLeftOf="@id/rb_type"
        app:layout_constraintBottom_toTopOf="@+id/et_name"

        />

    <EditText
        android:id="@+id/et_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:maxLines="2"
        android:textSize="25sp"
        android:hint="Title"
        android:transitionName="title_trans"
        android:layout_margin="50dp"
        app:layout_constraintTop_toBottomOf="@+id/pic_chose_btn"
        app:layout_constraintLeft_toLeftOf="@+id/imgView"
        app:layout_constraintRight_toRightOf="parent"/>
    <EditText
        android:id="@+id/et_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:paddingStart="15dp"
        android:textColor="@color/colorWhite"
        android:maxLines="6"
        android:transitionName="desc_trans"
        android:hint="Description"
        app:layout_constraintTop_toBottomOf="@+id/et_name"
        app:layout_constraintLeft_toLeftOf="parent" />
    <Button
        android:id="@+id/add"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="ADD"
        android:background="@drawable/button_background_presd"
        android:layout_marginTop="130dp"
        app:layout_constraintTop_toBottomOf="@id/et_description"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_delete"/>
    <com.example.todolistfragment.PriorityView
        android:id="@+id/priority_view"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:transitionName="pr_trans"
        android:background="@color/colorWhite"
        android:layout_marginRight="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view"/>
    <Button
        android:id="@+id/btn_delete"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="delete"
        android:background="@drawable/button_background_presd"
        app:layout_constraintTop_toBottomOf="@+id/add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:transitionName="button_trans"/>
    <RatingBar
        android:id="@+id/rb_type"
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:scaleX="0.5"
        android:scaleY="0.5"
        android:numStars="5"
        android:stepSize="1"
        android:background="@color/colorWhite"
        android:transitionName="rb_trans"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toBottomOf="@id/priority_view"
        app:layout_constraintLeft_toRightOf="@+id/imgView"
        app:layout_constraintBottom_toTopOf="@+id/pic_chose_btn" />

</android.support.constraint.ConstraintLayout>
